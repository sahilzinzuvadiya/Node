<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Edit Task</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://unpkg.com/lucide@latest"></script>
</head>

<body class="bg-gray-100 min-h-screen flex items-center justify-center">
  <div class="bg-white rounded-xl shadow-lg w-full max-w-md p-8">
    
    <!-- Heading with icon -->
    <h1 class="flex items-center justify-center text-2xl font-bold text-blue-600 mb-6 gap-2">
      <i data-lucide="edit-2" class="w-6 h-6"></i>
      Edit Task
    </h1>

    <!-- Edit Task Form -->
    <form action="/updateData" method="post" class="space-y-4">
      <!-- Hidden ID -->
      <input type="hidden" value="<%=singleData.id%>" name="id" />

      <!-- Task Input -->
      <div>
        <label for="task" class="block text-sm font-medium text-gray-700 mb-1">Task</label>
        <input type="text" id="task" name="task" value="<%=singleData.task%>"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 outline-none"
          placeholder="Enter task" required />
      </div>

      <!-- Priority Select -->
      <div>
        <label for="priority" class="block text-sm font-medium text-gray-700 mb-1">Priority</label>
        <select id="priority" name="priority"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 outline-none">
          <option value="Low" <%= singleData.priority==="Low" ? "selected" : "" %>>Low</option>
          <option value="Medium" <%= singleData.priority==="Medium" ? "selected" : "" %>>Medium</option>
          <option value="High" <%= singleData.priority==="High" ? "selected" : "" %>>High</option>
        </select>
      </div>

      <!-- Update Button -->
      <button type="submit"
        class="w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition-all font-medium">
        Update Task
      </button>
    </form>
  </div>

  <!-- Initialize Lucide icons -->
  <script>
    lucide.createIcons();
  </script>
</body>

</html>
