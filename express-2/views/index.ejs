<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Task Manager</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
</head>

<body class="bg-gray-50 min-h-screen flex flex-col items-center py-10">
    <div class="bg-white rounded-xl shadow-lg w-full max-w-4xl p-8">
<h1 class="flex items-center justify-center text-[30px] font-bold text-blue-800 mb-6 gap-2">
  <i data-lucide="list-todo" class="w-6 h-6 text-blue-600"></i>
  To-do List
</h1>
<!-- Form -->
        <form action="/addData" method="post" class="flex flex-col md:flex-row gap-4 mb-8">
            <input type="text" placeholder="Enter task" name="task"
                class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 outline-none"
                required />
            <select name="priority"
                class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 outline-none">
                <option value="Low">Low</option>
                <option value="Medium">Medium</option>
                <option value="High">High</option>
            </select>
            <button type="submit"
                class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-all">Add</button>
        </form>

        <!-- Table -->
        <div class="overflow-x-auto">
            <table class="w-full border border-gray-200 rounded-lg overflow-hidden text-sm">
                <thead class="bg-blue-600 text-white">
                    <tr>
                        <th class="px-4 py-3 text-left">ID</th>
                        <th class="px-4 py-3 text-left">Task</th>
                        <th class="px-4 py-3 text-left">Priority</th>
                        <th class="px-4 py-3 text-center" colspan="2">Action</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    <% students.map((e,i)=>{ %>
                        <tr class="hover:bg-gray-50 transition">
                            <td class="px-4 py-3 text-gray-700">
                                <%=e.id%>
                            </td>
                            <td class="px-4 py-3 text-gray-800 font-medium">
                                <%=e.task%>
                            </td>
                            <td class="px-4 py-3">
                                <% if(e.priority==="High" ){ %>
                                    <span
                                        class="px-2 py-1 text-xs font-medium bg-red-100 text-red-700 rounded">High</span>
                                    <% } else if(e.priority==="Medium" ){ %>
                                        <span
                                            class="px-2 py-1 text-xs font-medium bg-yellow-100 text-yellow-700 rounded">Medium</span>
                                        <% } else { %>
                                            <span
                                                class="px-2 py-1 text-xs font-medium bg-green-100 text-green-700 rounded">Low</span>
                                            <% } %>
                            </td>
                            <td class="px-4 py-3 text-center">
                                <a href="/deleteData/<%=e.id%>"
                                    class="flex items-center justify-center gap-1 text-red-600 hover:text-red-800 transition">
                                    <i data-lucide="trash-2" class="w-4 h-4"></i>
                                    Delete
                                </a>

                            </td>
                            <td class="px-4 py-3 text-center">
                                <a href="/editData?id=<%=e.id%>"
                                    class="flex items-center justify-center gap-1 text-blue-600 hover:text-blue-800 transition">
                                    <i data-lucide="edit" class="w-4 h-4"></i>
                                    Edit
                                </a>

                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <script>
        lucide.createIcons();
    </script>
</body>

</html>